{
  "include": [
    "env.d.ts",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "node",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
